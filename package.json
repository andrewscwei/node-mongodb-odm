{
  "name": "@andrewscwei/mongodb-odm",
  "version": "0.20.0",
  "description": "ODM for MongoDB",
  "main": "build/index.js",
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc",
    "test": "NODE_ENV=test DEBUG=mongodb-odm* mocha --require dotenv/config --timeout 10000 --reporter spec --full-trace --colors --recursive --bail --exit $([ -z \"$npm_config_path\" ] && echo build/tests || echo $npm_config_path)",
    "db": "mkdirp .mongodb/data && mongod --bind_ip 0.0.0.0 --dbpath .mongodb/data --logpath .mongodb/mongod.log --fork",
    "db:stop": "kill -15 $(pgrep mongo)",
    "lint": "tslint \"src/**/*.ts\" --project tsconfig.json",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewscwei/node-mongodb-odm.git"
  },
  "keywords": [
    "mongodb",
    "odm"
  ],
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrewscwei/node-mongodb-odm/issues"
  },
  "homepage": "https://github.com/andrewscwei/node-mongodb-odm#readme",
  "files": [
    "build"
  ],
  "dependencies": {
    "@sindresorhus/is": "^0.13.0",
    "@types/mongodb": "^3.1.14",
    "bcrypt": "^3.0.2",
    "debug": "^4.1.0",
    "lodash": "^4.17.11",
    "mongodb": "^3.1.9"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/debug": "^0.0.31",
    "@types/dotenv": "^6.1.0",
    "@types/faker": "^4.1.4",
    "@types/lodash": "^4.14.118",
    "@types/mocha": "^5.2.5",
    "dotenv": "^6.1.0",
    "faker": "^4.1.0",
    "mocha": "^5.2.0",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "types": "build/index.d.ts"
}
