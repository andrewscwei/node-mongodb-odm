{
  "name": "@andrewscwei/mongodb-odm",
  "version": "0.89.0",
  "description": "ODM for MongoDB",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "clean": "rimraf build",
    "prebuild": "npm run lint",
    "build": "npm run clean && tsc",
    "test": "npm run build -- --project tsconfig.test.json && mocha --config .mocharc --extension spec.js \"build/$npm_config_files\"",
    "test:unit": "concurrently -k --hide=0 \"npm run svc:db\" \"cross-env DEBUG=mongodb-odm* mocha --config .mocharc -n loader=ts-node/esm -r ts-node/register --extension spec.ts \"src/$npm_config_files\"\"",
    "svc:db": "docker run --rm -p 27017:27017 mongo:5.0.5",
    "lint": "eslint --ext .ts src",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewscwei/node-mongodb-odm.git"
  },
  "keywords": [
    "mongodb",
    "odm"
  ],
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrewscwei/node-mongodb-odm/issues"
  },
  "homepage": "https://github.com/andrewscwei/node-mongodb-odm#readme",
  "files": [
    "build",
    "index.d.ts"
  ],
  "types": "build/index.d.ts",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chance": "^1.1.3",
    "@types/debug": "^4.1.8",
    "@types/lodash": "^4.14.195",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chance": "^1.1.11",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.44.0",
    "mocha": "^10.2.0",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "debug": "^4.3.4",
    "lodash": "^4.17.21",
    "mongodb": "^5.7.0"
  }
}
