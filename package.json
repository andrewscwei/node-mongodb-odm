{
  "name": "@andrewscwei/mongodb-odm",
  "version": "0.74.0",
  "description": "ODM for MongoDB",
  "main": "build/index.js",
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc",
    "build:test": "npm run clean && tsc --project tsconfig.test.json",
    "test": "npm run build:test && mocha --timeout 10000 --reporter spec --full-trace --colors --exit \"build/**/*.spec.js\"",
    "test:ts": "cross-env DEBUG=mongodb-odm* NODE_ENV=development mocha -r ts-node/register --timeout 10000 --reporter spec --full-trace --colors --exit \"src/**/*.spec.ts\"",
    "db": "docker run --name node-mongodb-odm-db -d --rm -p 27017:27017 -v ${PWD}/.data/db:/data/db mongo:4.0.4",
    "db:stop": "docker stop node-mongodb-odm-db",
    "lint": "eslint --ext .ts src",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewscwei/node-mongodb-odm.git"
  },
  "keywords": [
    "mongodb",
    "odm"
  ],
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrewscwei/node-mongodb-odm/issues"
  },
  "homepage": "https://github.com/andrewscwei/node-mongodb-odm#readme",
  "files": [
    "build",
    "index.d.ts"
  ],
  "types": "build/index.d.ts",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/debug": "^4.1.7",
    "@types/faker": "^5.5.9",
    "@types/lodash": "^4.14.178",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^8.4.1",
    "faker": "^5.5.3",
    "mocha": "^9.1.3",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "4.5.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "debug": "^4.3.3",
    "lodash": "^4.17.21",
    "mongodb": "^4.2.2"
  }
}
